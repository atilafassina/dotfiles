{
  "editor.cursorBlinking": "blink",
  "editor.fontFamily": "Dank Mono, Fira Code, Iosevka, Monoid",
  "editor.fontSize": 18,
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "window.openFilesInNewWindow": "off",
