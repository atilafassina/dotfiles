  "editor.formatOnSave": true,
  "editor.trimAutoWhitespace": false,
  "prettier.tslintIntegration": false,
  "prettier.eslintIntegration": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.colorCustomizations": {
