echo "- - - -"

# get current location
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

# GIT
if [ -f ~/.gitconfig ]; then
  rm ~/.gitconfig
fi

# link ~/.gitconfig
ln -s $DIR/config/.gitconfig ~/.gitconfig

# if [ -d ~/.oh-my-zsh/custom/plugins/git-open ]; then
#   rm -rfv ~/.oh-my-zsh/custom/plugins/git-open
# fi
# clone/install git-open
# git clone git@github.com:paulirish/git-open.git ~/.oh-my-zsh/custom/plugins/git-open


# Hyper app
if [ -f ~/.hyper.js ]; then
  rm -fv ~/.hyper.js
fi

# symlink Hyper app config file
ln -sv $DIR/config/.hyper.js ~/.hyper.js

bash $DIR/zsh.sh
bash $DIR/os.sh
bash $DIR/cask.sh
